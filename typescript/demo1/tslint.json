{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
		"node_modules/**"
		]
	},
	"rules": {
		"quotemark": [true, "single"],
		"indent": false, 
		"interface-name": false, 
		"ordered-imports": false,
		"object-literal-sort-keys": false, 
		"no-consecutive-blank-lines": false, 
		"trailing-comma": [true, {
            "multiline": {
                "objects": "ignore",
                "arrays": "never",
                "functions": "never",
                "typeLiterals": "ignore"
            },
            "esSpecCompliant": true
		}],
		"whitespace": false, 
		"member-access": false,
		"no-trailing-whitespace": false,
		"no-empty": false,
		"no-console": false,
		"arrow-parens": false,
		"semicolon": [true, "always", "ignore-interfaces"],
		"no-var-requires": false,
		"prefer-const": false
	}
}
